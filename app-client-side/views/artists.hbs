            <label> Phone: </label> <input type="tel" name="phone">
            <label> Genre: </label> <input type="text" name="genre">
          </fieldset>
          <input class="btn" type="submit" id="add_artist" value="Add Artist">
          <input class="btn" type="button" value="Cancel">
