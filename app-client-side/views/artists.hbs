<h1>Artists</h1>

<div id "data-table">
    <h2><b>List of Scheduled Artists</b></h2>
    <table border=solid cellpadding="5">
        {{!-- Header section --}}
        <thead>
            <tr>
                {{#each data.[0]}}
                <th>
                    {{@key}}
                </th>
                {{/each}}
            </tr>
        </thead>
        {{!-- Body Section --}}
        <tbody>
            {{#each data}}
            {{!-- SELECT name, email, phone, genre FROM Artists;; --}}
            <tr>
                <td>{{this.name}}</td>
                <td>{{this.email}}</td>
                <td>{{this.phone}}</td>
                <td>{{this.genre}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
<br>

