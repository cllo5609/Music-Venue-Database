<div id "data-table">
    <h2><b>Upcoming Performance List</b></h2>
    <table border=solid cellpadding="5">
        {{!-- Header section --}}
        <thead>
            <tr>
                {{#each data.[0]}}
                <th>
                    {{@key}}
                </th>
                {{/each}}
            </tr>
        </thead>
        {{!-- Body Section --}}
        <tbody>
            {{#each data}}
            {{!-- SELECT Artists.name, Performances.performance_date, ticket_price, Performances.tickets_available --}}
            <tr>
                <td>{{this.name}}</td>
                <td>{{this.performance_date}}</td>
                <td>{{this.ticket_price}}</td>
                <td>{{this.tickets_available}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
<br>

<div id="add">
    <form id="add-performance">
        <legend><b>Add a Performance to the Schedule</b></legend>
          <fieldset class="fields">
            <label> Performance Date: </label> <input type="date" name="date">
            <label> Tickets Available: </label> <input type="number" name="tic_available"><br>
            <label> Room ID: </label> <input type="number" name="room_id">
            <label> Artist ID: </label> <input type="number" name="artist_id">

          </fieldset>
          <input class="btn" type="submit" id="add_performance" value="Add Performance">
          <input class="btn" type="button" value="Cancel">
	</form>
</div>
<br>

<div id="update">
    <form id="update-performance">
      <legend><b>Update Details of an Upcoming Performance</b></legend>
          <fieldset class="fields">
            <label> Performance ID: </label> <input type="number" name="id">
            <label> Performance Date: </label> <input type="date" name="date"><br>
            <label> Tickets Available: </label> <input type="number" name="tic_available">
            <label> Room ID: </label> <input type="number" name="room_id">
            <label> Artist ID: </label> <input type="number" name="artist_id">
    </fieldset>
    <input class="btn" type="submit" id="update-performance" value="Update Performance">
    <input class="btn" type="button" value="Cancel" >
  </form>
</div>
<br>

<div id="delete">
    <form id="delete-performance">
      <legend><b>Cancel a scheduled Performance</b></legend>
          <fieldset class="fields">
            <label> Performance ID: </label> <input type="number" name="id">
    </fieldset>
    <input class="btn" type="submit" id="delete-performance" value="Delete Performance">
    <input class="btn" type="button" value="Cancel" >
  </form>
</div>