<div id "browse">
    <h2><b>Venue List</b></h2>
    {{!-- Create a table --}}
    <table border=solid cellpadding="5">
        {{!-- Header section --}}
        <thead>
            <tr>
                {{#each data.[0]}}
                <th>
                    {{@key}}
                </th>
                {{/each}}
            </tr>
        </thead>
        {{!-- Body Section --}}
        <tbody>
            {{#each data}}
            {{!-- SELECT name, address, city, state, zip, phone, num_rooms, total_capacity FROM Venues; --}}
            <tr>
                <td>{{this.name}}</td>
                <td>{{this.address}}</td>
                <td>{{this.city}}</td>
                <td>{{this.state}}</td>
                <td>{{this.zip}}</td>
                <td>{{this.phone}}</td>
                <td>{{this.num_rooms}}</td>
                <td>{{this.total_capacity}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
<br>

<div id="add">

    <form id="add-venue">
        <legend><b>Add a Venue</b></legend>
          <fieldset class="fields">
            <label> Name: </label> <input type="text" name="name">
            <label> Address: </label> <input type="text" name="address">
            <label> City: </label> <input type="text" name="city">
            <label> State: </label> <input type="text" name="state"><br>
            <label> Zip Code: </label> <input type="text" name="zip">
            <label> Phone Number: </label> <input type="tel" name="phone">
            <label> Number of Rooms: </label> <input type="text" name="rooms"><br>
            <label> Total Capacity: </label> <input type="text" name="capacity">
          </fieldset>
          <input class="btn" type="submit" id="add_venue" value="Add Venue">
          <input class="btn" type="button" value="Cancel">
	</form>
