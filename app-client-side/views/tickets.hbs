<div id="add">
    <form id="add-ticket">
        <legend><b>Add a Ticket for an Upcoming Performance</b></legend>
          <fieldset class="fields">
            <label> Ticket Price: </label> <input type="number" step="0.01" name="price">
            <label> Ticket Quantity: </label> <input type="number" min="1" max="8" name="quantity">

          </fieldset>
          <input class="btn" type="submit" id="add_ticket" value="Add Ticket">
          <input class="btn" type="button" value="Cancel">
	</form>
</div>
<br>

<div id="update">
    <form id="update-ticket">
      <legend><b>Update Ticket Details</b></legend>
          <fieldset class="fields">
            <label> ID: </label> <input type="number" name="id">
            <label> Ticket Price: </label> <input type="number" step="0.01" name="price">
            <label> Ticket Quantity: </label> <input type="number" name="quantity">
    </fieldset>
    <input class="btn" type="submit" id="update-ticket" value="Update Ticket">
    <input class="btn" type="button" value="Cancel" >
  </form>
</div>
<br>

<div id="delete">
    <form id="delete-ticket">
      <legend><b>Delete Ticket for Scheduled Event</b></legend>
          <fieldset class="fields">
            <label> ID: </label> <input type="number" name="id">
    </fieldset>
    <input class="btn" type="submit" id="delete-ticket" value="Delete Ticket">
    <input class="btn" type="button" value="Cancel" >
  </form>
